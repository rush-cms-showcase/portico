---
import BaseLayout from '@/layouts/base-layout.astro'
import { useTranslations } from '@/lib/i18n'

const t = useTranslations('pt_BR')

const services = [
  {
    title: 'Reforma Residencial Completa',
    description: 'Transformação total do seu imóvel com planejamento funcional e entrega garantida.',
    icon: 'mdi:home-city',
  },
  {
    title: 'Ampliação e Redistribuição',
    description: 'Otimização de espaços e criação de novos ambientes pensados para sua rotina.',
    icon: 'mdi:floor-plan',
  },
  {
    title: 'Acabamento Premium',
    description: 'Revestimentos, pisos e acabamentos de alta qualidade com execução impecável.',
    icon: 'mdi:palette',
  },
  {
    title: 'Consultoria de Projeto',
    description: 'Diagnóstico funcional e planejamento inteligente antes de qualquer obra.',
    icon: 'mdi:lightbulb-on',
  },
]
---

<BaseLayout
  title={`${t.services.title} - ${t.site.title}`}
  description={t.services.description}
>
  <section class="py-20 bg-white">
    <div class="container mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-16">
        <h1 class="font-heading text-4xl sm:text-5xl lg:text-6xl font-semibold text-portico-blue mb-6">
          {t.services.title}
        </h1>
        <p class="font-body text-lg text-portico-gray max-w-3xl mx-auto">
          {t.services.description}
        </p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8 max-w-7xl mx-auto">
        {services.map((service) => (
          <div class="group bg-white border border-portico-gray-200 rounded-lg p-6 hover:shadow-xl transition-all duration-300 hover:-translate-y-1">
            <div class="w-16 h-16 bg-portico-orange/10 rounded-full flex items-center justify-center mb-6 group-hover:bg-portico-orange/20 transition-colors">
              <iconify-icon icon={service.icon} class="text-4xl text-portico-orange"></iconify-icon>
            </div>
            
            <h2 class="font-heading text-xl font-semibold text-portico-blue mb-3">
              {service.title}
            </h2>
            
            <p class="font-body text-portico-gray leading-relaxed">
              {service.description}
            </p>
          </div>
        ))}
      </div>
    </div>
  </section>

  <section class="py-20 bg-portico-gray-50">
    <div class="container mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <h2 class="font-heading text-3xl font-semibold text-portico-blue mb-6">
        {t.services.ctaTitle}
      </h2>
      <p class="font-body text-lg text-portico-gray mb-8 max-w-2xl mx-auto">
        {t.services.ctaDescription}
      </p>
      <a
        href="#contato"
        class="inline-block bg-portico-orange hover:bg-portico-blue transition-colors duration-300 text-white font-body font-bold text-lg px-8 py-4 rounded-lg shadow-lg"
      >
        {t.buttons.requestQuote}
      </a>
    </div>
  </section>
</BaseLayout>
