---
import BaseLayout from '@/layouts/base-layout.astro'
import HeroSection from '@/components/sections/hero-section.astro'
import ReasonSection from '@/components/sections/reason-section.astro'
import JulioFactorSection from '@/components/sections/julio-factor-section.astro'
import Method4PSection from '@/components/sections/method-4p-section.astro'
import GuaranteesSection from '@/components/sections/guarantees-section.astro'
import ServicesSection from '@/components/sections/services-section.astro'
import ClientFilterSection from '@/components/sections/client-filter-section.astro'
import FAQSection from '@/components/sections/faq-section.astro'
---

<BaseLayout
  title="Pórtico Reformas - Sua reforma em Porto Alegre com prazo e orçamento garantidos"
  description="Antes de reformar, a gente entende como você vive. Reforma residencial em Porto Alegre com planejamento inteligente, prazo garantido e orçamento fixo em contrato."
>
  <HeroSection />
  <ReasonSection />
  <JulioFactorSection />
  <Method4PSection />
  <GuaranteesSection />
  <ServicesSection />
  <ClientFilterSection />
  <FAQSection />

  <section id="contato" class="py-20 bg-white">
    <div class="container mx-auto px-4">
      <h2 class="font-heading text-3xl font-semibold text-portico-blue text-center mb-8">Entre em Contato</h2>
      <p class="text-center text-portico-gray">Formulário de contato será implementado em T014</p>
    </div>
  </section>
</BaseLayout>
