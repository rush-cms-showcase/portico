---
import { useTranslations } from '@/lib/i18n'

const t = useTranslations('pt_BR')

interface Props {
  formId: string
}

const { formId } = Astro.props
---

<div class="bg-white rounded-lg shadow-lg p-8 max-w-2xl mx-auto">
  <form id="contact-form" class="space-y-6">
    <div>
      <label for="name" class="block font-body font-semibold text-portico-gray mb-2">
        {t.contact.name} *
      </label>
      <input
        type="text"
        id="name"
        name="name"
        required
        class="w-full px-4 py-3 border border-portico-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-portico-blue focus:border-transparent font-body"
        placeholder="Seu nome"
      />
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
      <div>
        <label for="email" class="block font-body font-semibold text-portico-gray mb-2">
          {t.contact.email} *
        </label>
        <input
          type="email"
          id="email"
          name="email"
          required
          class="w-full px-4 py-3 border border-portico-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-portico-blue focus:border-transparent font-body"
          placeholder="seu@email.com"
        />
      </div>

      <div>
        <label for="phone" class="block font-body font-semibold text-portico-gray mb-2">
          {t.contact.phone} *
        </label>
        <input
          type="tel"
          id="phone"
          name="phone"
          required
          class="w-full px-4 py-3 border border-portico-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-portico-blue focus:border-transparent font-body"
          placeholder="(00) 00000-0000"
        />
      </div>
    </div>

    <div>
      <label for="subject" class="block font-body font-semibold text-portico-gray mb-2">
        Assunto
      </label>
      <input
        type="text"
        id="subject"
        name="subject"
        class="w-full px-4 py-3 border border-portico-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-portico-blue focus:border-transparent font-body"
        placeholder="Sobre o que você quer falar?"
      />
    </div>

    <div>
      <label for="message" class="block font-body font-semibold text-portico-gray mb-2">
        Mensagem *
      </label>
      <textarea
        id="message"
        name="message"
        required
        rows="5"
        class="w-full px-4 py-3 border border-portico-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-portico-blue focus:border-transparent font-body resize-none"
        placeholder="Conte-nos sobre o seu projeto..."
      ></textarea>
    </div>

    <div id="form-message" class="hidden"></div>

    <button
      type="submit"
      class="w-full bg-portico-blue hover:bg-portico-orange transition-colors duration-300 text-white font-body font-bold text-lg px-8 py-4 rounded-lg shadow-lg disabled:opacity-50 disabled:cursor-not-allowed"
    >
      Enviar Mensagem
    </button>
  </form>
</div>

<script define:vars={{ formId }}>
  const form = document.getElementById('contact-form')
  const formMessage = document.getElementById('form-message')
  const submitButton = form?.querySelector('button[type="submit"]')

  form?.addEventListener('submit', async (e) => {
    e.preventDefault()

    if (!submitButton || !formMessage) return

    submitButton.disabled = true
    submitButton.textContent = 'Enviando...'
    formMessage.classList.add('hidden')

    const formData = new FormData(form)
    const data = Object.fromEntries(formData.entries())

    try {
      const response = await fetch(`${import.meta.env.RUSH_API_URL}/forms/${formId}/submit`, {
        method: 'POST',
        headers: {
          'Content-Type': 'application/json',
          'Authorization': `Bearer ${import.meta.env.RUSH_API_TOKEN}`,
        },
        body: JSON.stringify(data),
      })

      if (response.ok) {
        formMessage.className = 'p-4 bg-green-50 border border-green-200 rounded-lg text-green-800 font-body'
        formMessage.textContent = 'Mensagem enviada com sucesso! Entraremos em contato em breve.'
        formMessage.classList.remove('hidden')
        form.reset()
      } else {
        throw new Error('Erro ao enviar formulário')
      }
    } catch (error) {
      formMessage.className = 'p-4 bg-red-50 border border-red-200 rounded-lg text-red-800 font-body'
      formMessage.textContent = 'Erro ao enviar mensagem. Por favor, tente novamente.'
      formMessage.classList.remove('hidden')
    } finally {
      submitButton.disabled = false
      submitButton.textContent = 'Enviar Mensagem'
    }
  })
</script>
